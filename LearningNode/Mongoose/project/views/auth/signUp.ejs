<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body, input, button, label, h2, span, a {
            font-family: 'Inter', Arial, sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <%- include('../partials/header') %>
    <main class="flex flex-1 items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl">
            <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Sign Up</h2>
            
            <!-- Error Message Block -->
            <% if (typeof errors!== 'undefined' && errors.length>0) { %>
                <div class="mb-4">
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center" role="alert">
                         <ul class="list-disc list-inside text-left">
                           <% errors.forEach(function(err) { %>
                             <li><%= err %></li>
                             <% }) %>
                         </ul>
                    </div>
                </div>
            <% } %>
            <!-- End Error Message Block -->

            <form action="/signUp" method="POST" class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="firstName" class="block text-gray-700 mb-1">First Name</label>
                        <input 
                            type="text" 
                            id="firstName" 
                            name="firstName" 
                            required 
                            placeholder="Enter your first name"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            value="<%= typeof oldInput !== 'undefined' && oldInput.firstName ? oldInput.firstName : '' %>"
                        >
                    </div>
                    <div>
                        <label for="lastName" class="block text-gray-700 mb-1">Last Name</label>
                        <input 
                            type="text" 
                            id="lastName" 
                            name="lastName" 
                            required 
                            placeholder="Enter your last name"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                            value="<%= typeof oldInput !== 'undefined' && oldInput.lastName ? oldInput.lastName : '' %>"
                        >
                    </div>
                </div>
                <div>
                    <label for="email" class="block text-gray-700 mb-1">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        placeholder="Enter your email"
                        class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                        value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : '' %>"
                    >
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="password" class="block text-gray-700 mb-1">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required 
                            minlength="8"
                            placeholder="Password (min 8 characters)"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                        >
                    </div>
                    <div>
                        <label for="confirmPassword" class="block text-gray-700 mb-1">Confirm Password</label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            required 
                            minlength="8"
                            placeholder="Re-enter your password"
                            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
                        >
                    </div>
                </div>
                <div>
                    <label class="block text-gray-700 mb-1">Sign up as</label>
                    <div class="flex space-x-4">
                        <label class="flex items-center">
                            <input type="radio" name="role" value="user" required class="mr-2"
                                <%= typeof oldInput !== 'undefined' && oldInput.role === 'user' ? 'checked' : '' %>>
                            <span>User</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="role" value="host" required class="mr-2"
                                <%= typeof oldInput !== 'undefined' && oldInput.role === 'host' ? 'checked' : '' %>>
                            <span>Host</span>
                        </label>
                    </div>
                </div>
                <div>
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="terms" required class="mr-2"
                            <%= typeof oldInput !== 'undefined' && oldInput.terms ? 'checked' : '' %>>
                        <span>
                            I agree to the 
                            <a href="/terms" class="text-blue-600 hover:underline">Terms and Conditions</a>
                        </span>
                    </label>
                </div>
                <button 
                    type="submit" 
                    class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors font-semibold"
                >
                    Sign Up
                </button>
            </form>
            <div class="mt-4 text-center">
                <span class="text-gray-600">Already have an account?</span>
                <a href="/login" class="text-blue-600 hover:underline font-semibold ml-1">Login</a>
            </div>
        </div>
    </main>
</body>
</html>