<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Roomly</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    body, input, button, label, h1, h2, h3, span, a {
      font-family: 'Inter', Arial, sans-serif;
    }
    /* Custom scrollbar for beauty */
    ::-webkit-scrollbar {
      width: 8px;
      background: #f1f1f1;
    }
    ::-webkit-scrollbar-thumb {
      background: #cbd5e1;
      border-radius: 8px;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-blue-100 via-white to-blue-200 min-h-screen flex flex-col">

  <!-- navigation  -->
  <%- include('../partials/header',{isLoggedIn})%> 

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-blue-600 to-blue-400 text-white text-center px-6 py-16 flex flex-col items-center justify-center overflow-hidden">
    <div class="absolute left-0 top-0 w-32 h-32 bg-blue-300 opacity-30 rounded-full blur-2xl -z-10"></div>
    <div class="absolute right-0 bottom-0 w-40 h-40 bg-blue-200 opacity-20 rounded-full blur-2xl -z-10"></div>
    <%- include('../partials/heroSection')%> 
    <div class="mt-6 flex flex-wrap justify-center gap-6">
      <div class="flex flex-col items-center">
        <i class="fas fa-home text-3xl mb-2"></i>
        <span class="font-semibold">Find Your Home</span>
      </div>
      <div class="flex flex-col items-center">
        <i class="fas fa-user-friends text-3xl mb-2"></i>
        <span class="font-semibold">Connect with Hosts</span>
      </div>
      <div class="flex flex-col items-center">
        <i class="fas fa-shield-alt text-3xl mb-2"></i>
        <span class="font-semibold">Safe & Secure</span>
      </div>
      <div class="flex flex-col items-center">
        <i class="fas fa-star text-3xl mb-2"></i>
        <span class="font-semibold">Top Rated</span>
      </div>
    </div>
  </section>

  <!-- âœ… Home Listings -->
  <main id="listings" class="px-4 py-8 max-w-6xl mx-auto w-full">
    <h3 class="text-blue-700 text-3xl font-extrabold mb-8 text-center flex items-center justify-center gap-2">
      <i class="fas fa-list"></i>
      Available Homes
    </h3>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% registeredHome.forEach(home => { %>
        <%- include('../partials/card',{ home: home,isLoggedIn:isLoggedIn })%> 
      <% }) %>
    </div>
  </main>
  
  <!--  footer -->
  <%- include('../partials/footer')%> 
 
</body>
</html>
