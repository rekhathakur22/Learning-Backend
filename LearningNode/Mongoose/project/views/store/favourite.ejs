<!-- home page ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Favourite page</title>
  <link href="./output.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    body, input, button, label, h1, h2, h3, span, a {
      font-family: 'Montserrat', Arial, sans-serif;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-blue-100 via-white to-blue-200 min-h-screen flex flex-col">

  <!-- navigation  -->
  <%- include('../partials/header',{ isLoggedIn: isLoggedIn })%> 

  <!-- âœ… Home Listings -->
  <main id="listings" class="flex-1 max-w-5xl mx-auto w-full px-4 py-10">
    <h3 class="text-blue-700 text-3xl font-extrabold mb-8 text-center tracking-tight drop-shadow">
      Your Favourite Homes
    </h3>
    <div class="flex flex-col space-y-8">
      <% favouriteWithDetails.forEach(home => { %>
        <div class="bg-white rounded-2xl shadow-xl hover:shadow-blue-200 transition-shadow duration-300 border border-blue-100 flex flex-col md:flex-row overflow-hidden group">
          <div class="md:w-2/5 w-full flex-shrink-0">
            <img src="<%-home.img %>" alt="Home Image" class="w-full h-40 md:h-48 object-cover rounded-t-2xl md:rounded-l-2xl md:rounded-tr-none transition-transform duration-300 group-hover:scale-105">
          </div>
          <div class="flex-1 p-6 flex flex-col justify-between">
            <div>
              <h4 class="text-2xl font-bold text-blue-700 mb-1 flex items-center gap-2">
                <i class="fas fa-home text-blue-400"></i>
                <%-home.homename%>
              </h4>
              <p class="text-gray-600 mb-2 flex items-center gap-1">
                <i class="fas fa-map-marker-alt text-blue-400"></i>
                <%-home.location%>
              </p>
              <p class="text-green-700 font-semibold mt-2 text-lg flex items-center gap-1">
                <i class="fas fa-rupee-sign"></i>
                <%-home.price%>
              </p>
            </div>
            <div class="flex flex-wrap gap-2 mt-4">
              <a href="/<%-home._id%>" class="inline-flex items-center gap-2 px-5 py-2 bg-blue-600 text-white rounded-lg font-semibold shadow hover:bg-blue-700 transition">
                Detail
              </a>
              <a href="/<%-home.id%>" class="inline-flex items-center gap-2 px-5 py-2 bg-green-600 text-white rounded-lg font-semibold shadow hover:bg-green-700 transition">
                Book
              </a>
              <form action="/delete-favourite/<%-home._id%>" method="POST" class="inline">
                <button
                  type="submit"
                  class="inline-flex items-center gap-2 px-5 py-2 bg-red-500 text-white rounded-lg font-semibold shadow hover:bg-red-600 transition"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
  
  <!--  footer -->
  <%- include('../partials/footer')%> 
 
</body>
</html>

