
<!-- home page ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Favourite page</title>
   <link href="./output.css" rel="stylesheet">
</head>

<!-- body page -->
<body >

  <!-- navigation  -->
  <%- include('../partials/header',{ isLoggedIn: isLoggedIn })%> 

  <!-- âœ… Home Listings -->
  <main id="listings" class="px-6 py-4">
    <h3 class="text-blue-600 text-2xl font-bold mb-4 text-center">Available Homes</h3>
    <div class="flex flex-col space-y-4">
      <% favouriteWithDetails.forEach(home => { %>
        <div class="bg-white p-4 rounded-md shadow-md flex justify-between items-center">
        <div class="flex flex-col">
          <h4 class="text-xl font-semibold mb-2"><%-home.homename%></h4>
          <p class="text-sm text-gray-600"><%-home.location%></p>
          <p class="text-green-700 font-semibold mt-2"><%-home.price%></p>
         <div class="flex mt-3">
           <a href="/<%-home._id%>" class="bg-blue-600 py-2 text-center mx-3 text-white px-15">Detail</a>
           <a href="/<%-home.id%>" class="bg-blue-600 py-2 text-center  text-white px-15">Book</a>
           <form action="/delete-favourite/<%-home._id%>" method="POST">
           <button
           type="submit"
           class="mx-5 px-6 bg-red-600 hover:bg-red-700 text-white font-medium py-2 transition duration-300"
           >
           delete
           </button>
           </form>
         </div>
        </div>
        <img src="<%-home.img %>" alt="Home 1" class="w-2/5 h-48 object-cover rounded-md">
      </div>
       <% }) %>
    </div>
  </main>
  
  <!--  footer -->
    <%- include('../partials/footer')%> 
 
</body>
</html>

