<!-- ðŸ¡ Home Card 1 -->
<div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-blue-100 flex flex-col overflow-hidden group">
  <div class="relative">
    <img src="<%-home.img %>" alt="Home Image" class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300">
    <% if(home.isFeatured) { %>
      <span class="absolute top-3 left-3 bg-yellow-400 text-white text-xs px-3 py-1 rounded-full font-semibold shadow"><i class="fas fa-crown mr-1"></i>Featured</span>
    <% } %>
    <span class="absolute top-3 right-3 bg-blue-600 text-white text-xs px-3 py-1 rounded-full font-semibold shadow"><i class="fas fa-star"></i> <%= home.rating || '4.5' %></span>
  </div>
  <div class="p-5 flex-1 flex flex-col">
    <h4 class="text-xl font-bold text-blue-700 mb-1 flex items-center gap-2">
      <i class="fas fa-map-marker-alt text-blue-400"></i>
      <%= home.city %>, <%= home.state %>
    </h4>
    <p class="text-gray-600 mb-2 line-clamp-2"><%= home.description || 'A beautiful place to stay with all amenities.' %></p>
    <div class="flex items-center gap-4 mt-auto mb-2">
      <span class="inline-flex items-center text-sm text-gray-500">
        <i class="fas fa-bed mr-1 text-blue-400"></i>
        <%= home.bedrooms || 1 %> Beds
      </span>
      <span class="inline-flex items-center text-sm text-gray-500">
        <i class="fas fa-bath mr-1 text-blue-400"></i>
        <%= home.bathrooms || 1 %> Baths
      </span>
      <span class="inline-flex items-center text-sm text-gray-500">
        <i class="fas fa-users mr-1 text-blue-400"></i>
        <%= home.capacity || 2 %> Guests
      </span>
    </div>
    <div class="flex items-center justify-between mt-2">
      <span class="text-lg font-bold text-blue-600">
        â‚¹<%= home.price %> <span class="text-sm font-normal text-gray-500">/night</span>
      </span>
      <a href="/<%-home._id%>" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors shadow">
        View <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</div>